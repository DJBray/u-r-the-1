{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "es2017",
        "lib": ["es2017"],
        "module": "commonjs",
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}